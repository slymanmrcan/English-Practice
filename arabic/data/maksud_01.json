  "introduction": {
    "title": "Maksud Nedir?",
    "content": "Maksud (المقصود), 'hedeflenen, amaçlanan' anlamına gelir. İlletli (hasta harfli: و ي ا) ve muzaaf (şeddeli) fiillerin çekimlerini öğretir. Bu fiiller kurallı fiillerden farklı çekilir.",
    "illet_harfleri": {
      "title": "İllet Harfleri (حروف العلة)",
      "letters": ["ا (elif)", "و (vav)", "ي (ya)"],
      "note": "Bu harfler kelimede bulunduğunda özel kurallar uygulanır, harfler düşebilir veya değişebilir."
    },
    "illet_types": [
      {"name": "Misal", "nameAr": "المثال", "meaning": "Fa harfi illetli (و veya ي)", "example": "وَعَدَ، يَسَرَ"},
      {"name": "Ecvef", "nameAr": "الأجوف", "meaning": "Ayn harfi illetli (و veya ي)", "example": "قَالَ، بَاعَ"},
      {"name": "Nakıs", "nameAr": "الناقص", "meaning": "Lam harfi illetli (و veya ي)", "example": "دَعَا، رَمَى"},
      {"name": "Lefif", "nameAr": "اللفيف", "meaning": "İki harf illetli", "subtypes": [
        {"name": "Lefif Makrun", "meaning": "Ayn ve Lam illetli", "example": "رَوَى، طَوَى"},
        {"name": "Lefif Mefruk", "meaning": "Fa ve Lam illetli", "example": "وَفَى، وَقَى"}
      ]},
      {"name": "Muzaaf", "nameAr": "المضاعف", "meaning": "Ayn ve Lam aynı harf (şeddeli)", "example": "مَدَّ، رَدَّ"}
    ]
  },
